<%# head partial %>
<%- include ('../partials/head.ejs') %>
  <body>
    <%# nav partial %>
    <%- include ('../partials/nav.ejs') %>
    <div class="wrapper">
      <div class="container">


        <form action="/logs" method="POST">
          <div class="field">
            <label class="label">Book Title</label>
            <div class="control has-icons-left">
              <input class="input" type="text" placeholder="Oh The Places You'll Go" name="title">
              <span class="icon is-small is-left">
                <i class="fas fa-book"></i>
              </span>
            </div>
          </div>

          <div class="field columns">
            <div class="column is-half">
              <label class="label">Reader Name </label>
              <div class="control has-icons-left">
                <input class="input" type="text" placeholder="Jane Smith" name="readerName">
                <span class="icon is-small is-left">
                  <i class="fas fa-user"></i>
                </span>
              </div>
            </div>
            <div class="column is-half">
              <label class="label">Pages Read</label>
              <div class="control has-icons-left">
                <input class="input" type="text" placeholder="pages 17 - 23" name="pagesRead">
                <span class="icon is-small is-left">
                  <i class="fas fa-hashtag"></i>
                </span>
              </div>
            </div>
          </div>

          <div class="field">
            <label class="label">Character Name</label>
            <div class="control has-icons-left">
              <input class="input" type="text" placeholder="Sherlock Holmes" name="characterName">
              <span class="icon is-small is-left">
                <i class="fas fa-user-secret"></i>
              </span>
            </div>
          </div>

          <label class="label">How is the Character Feeling in These Pages</label>
          <div class="field columns">
            <div class="column is-2">
              <label class="radio"><i class="far fa-smile fa-3x"></i>
                <input type="radio" name="isHappy">
              </label>
            </div>
            <div class="column is-2">
              <label class="radio"><i class="far fa-frown fa-3x"></i>
                <input type="radio" name="isSad">
              </label>
            </div>
            <div class="column is-2">
              <label class="radio"><i class="far fa-angry fa-3x"></i>
                <input type="radio" name="isMad">
              </label>
            </div>
            <div class="column is-2">
              <label class="radio"><i class="far fa-grin-tongue-wink fa-3x"></i>
                <input type="radio" name="isFunny">
              </label>
            </div>
            <div class="column is-2">
              <label class="radio"><i class="far fa-grin-hearts fa-3x"></i>
                <input type="radio" name="isLove">
              </label>
            </div>
            <div class="column is-2">
              <label class="radio"><i class="far fa-surprise fa-3x"></i>
                <input type="radio" name="isSuprise">
              </label>
            </div>
          </div>

          <div class="field">
            <label class="label">What matters most to the character?</label>
            <div class="control">
              <textarea class="textarea" placeholder="Answer here" name="questionOne"></textarea>
            </div>
          </div>

          <div class="field">
            <label class="label">What lesson does the character learn?</label>
            <div class="control">
              <textarea class="textarea" placeholder="Answer here" name="questionTwo"></textarea>
            </div>
          </div>

          <div class="field">
            <label class="label">What affect is the character having on those around them?</label>
            <div class="control">
              <textarea class="textarea" placeholder="Answer here" name="questionThree"></textarea>
            </div>
          </div>

          <div class="field">
            <label class="label">What question would a teacher ask you about these pages?</label>
            <div class="control">
              <textarea class="textarea" placeholder="Answer here" name="questionFour"></textarea>
            </div>
          </div>
          <br>
          <div class="field">
            <div class="control">
              <input class="button is-link" type="submit" value="Submit">
            </div>
          </div>
        </form>
      </div>
    </div>
    <%- include ('../partials/footer.ejs') %>
  </body>
