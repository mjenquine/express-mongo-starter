<%# head partial %>
<%- include ('../partials/head.ejs') %>
  <body>
    <%# nav partial %>
    <%- include ('../partials/nav.ejs') %>
    <div class="container">
      <div class="columns is-multiline">


        <% for (let log of logs) { %>
        <div class="column is-one-third">
          <div class="card">
            <header class="card-header">
              <p class="card-header-title">
                <%= log.title %>
              </p>
              <a href="#" class="card-header-icon" aria-label="more options">
                <span class="icon">
                  <i class="fas fa-angle-down" aria-hidden="true"></i>
                </span>
              </a>
            </header>

            <div class="card-content">
              <div class="content">
                <span>Reader Name: <%= log.readerName %></span><br>
                <span>Pages Read: <%= log.pagesRead %></span><br>
                <time datetime="2016-1-1"> <%= log.timestamps %> </time>
              </div>
            </div>

            <footer class="card-footer">
              <a href="/logs/<%= log._id %>" class="card-footer-item">View</a>
              <a href="/logs/<%= log._id %>/edit" class="card-footer-item">Edit</a>
            </footer>
          </div>
        </div>
        <% } %>



      </div>
    </div>
    <%- include ('../partials/footer.ejs') %>
  </body>
